<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="382dp"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:background="#f1f1f1"

            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yemekAdText"
                android:layout_width="347dp"
                android:layout_height="53dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="230dp"
                android:text="Patlıcan Kebabı dsadsadasdasdsadasdasdasdasdasdasdas"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/resim"
                android:layout_width="385dp"
                android:layout_height="220dp"
                android:layout_alignParentStart="true"


                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
               />

            <TextView
                android:id="@+id/hazirlamasuresiText"
                android:layout_width="wrap_content"
                android:layout_height="27dp"


                android:layout_alignStart="@+id/yemekAdText"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-1dp"
                android:layout_marginBottom="17dp"
                android:text="Pişirme Süresi:50 dk" />

            <TextView
                android:id="@+id/kisiSayisiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hazirlamasuresiText"
                android:layout_alignStart="@+id/yemekAdText"


                android:layout_marginStart="237dp"
                android:layout_marginTop="-27dp"
                android:text="Kaç Kişilik:5" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>