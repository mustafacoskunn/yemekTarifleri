<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="382dp"
        android:layout_height="300dp"
        android:layout_margin="15dp"
        app:cardBackgroundColor="#f1f1f1"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#f1f1f1">

            <TextView
                android:id="@+id/yemekAdText"
                android:layout_width="347dp"
                android:layout_height="53dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="230dp"
                android:text="Patlıcan Kebabı dsadsadasdasdsadasdasdasdasdasdasdas"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/resim"
                android:layout_width="385dp"
                android:layout_height="220dp"
                android:layout_alignParentStart="true"


                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/hazirlamasuresiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/yemekAdText"

                android:layout_alignParentBottom="true"
                android:layout_marginStart="214dp"
                android:layout_marginBottom="6dp"
                android:text="Hazırlama Süresi:50 dk"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="21dp"
                android:layout_height="18dp"
                android:layout_alignStart="@+id/hazirlamasuresiText"
                android:layout_alignTop="@+id/yemekAdText"
                android:layout_alignParentBottom="true"

                android:layout_marginStart="-18dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="0dp"
                android:padding="1dp"
                app:srcCompat="@drawable/hazirlama_icon" />

            <TextView
                android:id="@+id/kisiSayisiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hazirlamasuresiText"
                android:layout_alignStart="@+id/yemekAdText"


                android:layout_marginStart="25dp"
                android:layout_marginTop="-17dp"
                android:text="8 Kisilik"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/yemekAdText"
                android:layout_alignTop="@+id/kisiSayisiText"
                android:layout_alignBottom="@+id/kisiSayisiText"
                android:layout_marginStart="9dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/kisi_icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/kisiSayisiText"
                android:layout_alignParentStart="true"
                android:layout_marginStart="115dp"
                android:layout_marginBottom="0dp"
                android:text="Pisirme"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_marginStart="9dp"

                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/kisiSayisiText"
                app:srcCompat="@drawable/pisirme_icon" />

            <TextView
                android:id="@+id/hazirlamasuretext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView"
                android:text=":25 dk"
                android:textSize="14dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>